{% extends 'base.html.twig' %}

{% block title %}Tags{%  endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <a href="{{ path('homepage') }}">
        Back to homepage.
    </a>
    <h1>The tag {{ tag.name }} </h1>
    <h2>In this tag :
    </h2>
        {% for article in tag.articles %}
            <li><a href="article/{{ article.id }}">{{ article.title }}</a></li>
    {% endfor %}
{% endblock %}