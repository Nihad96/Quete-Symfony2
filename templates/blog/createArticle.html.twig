{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}New Article{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <a href="{{ path('homepage') }}">
        Back to homepage.
    </a>
    <div style="text-align: center;">
    <h1>Create an article</h1>
    {{ form_start(form) }}
    {{ form_row(form.title) }}<br>
    {{ form_row(form.content) }}<br>
    {{ form_row(form.category) }}<br>
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
    <hr>
    <div style="text-align: center">
    <h1>All articles from article's table : </h1>
    {% for article in articles %}
        <div>
            <h2>{{ loop.index }} / {{ article.title }} - Category : <a href="{{ path('blog_show_all_by_category', {category : article.category.name}) }}"> {{ article.category.name }}</a></h2>
            <p>{{ article.content }}</p>
        </div>

    {% endfor %}
    </div>
{% endblock %}